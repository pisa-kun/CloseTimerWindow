<Window x:Class="CloseTimerWindow.AutoCloseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloseTimerWindow"
        mc:Ignorable="d"
        Title="AutoCloseWindow" Height="200" Width="200">
    <Window.Resources>
        <SolidColorBrush x:Key="WineRed" Color="#b33e5c"/>
    </Window.Resources>
    <Grid Background="{StaticResource WineRed}">
        <StackPanel>
            <TextBlock x:Name="TimerText" Foreground="White" />
            <TextBlock x:Name="Content" Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
